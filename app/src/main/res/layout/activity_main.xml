<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sqh.buddiesgo.MainActivity">

    <TextView
        android:text="What are your interests?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/hobbyText"
        android:contentDescription="Choose your interests!"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:fontFamily="sans-serif" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hobbyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <Button
            android:text="Food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodButton"
            android:contentDescription="Food"
            style="@style/Widget.AppCompat.Button.Colored"
            android:elevation="0dp" />

        <Button
            android:text="Hiking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hikingButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:contentDescription="Hiking" />

        <Button
            android:text="Movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:contentDescription="Movie" />
    </LinearLayout>
</RelativeLayout>
